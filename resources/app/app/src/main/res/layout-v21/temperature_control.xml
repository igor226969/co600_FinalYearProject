<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical" >
    
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/backc"
                android:text="Humidity" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/backc"
                android:text="Temperature" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" >

            <TextView
                android:id="@+id/CurrentHumid"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="60sp"
                android:background="@drawable/backc"
                android:gravity="center"
                android:text="40%" />
            <TextView
                android:id="@+id/CurrentTemp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="60sp"
                android:background="@drawable/backc"
                android:text="20 Â°C " />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="151dp"
            android:background="@drawable/backc"
            android:layout_weight="0.4">


            <SeekBar
                android:id="@+id/tempSlider"
                android:progressBackgroundTint="#0000FF"
                android:progressTint="#FF0000"
                android:thumbTint= "#000000"
                android:layout_width="256dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                android:max="15"
                android:progress="0" />

            <TextView
                android:id="@+id/TTarget"
                android:layout_width="158dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Target Temp:" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="0dip"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/weatherbg"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">


            </LinearLayout>


        </TableRow>
    </TableLayout>

</RelativeLayout>